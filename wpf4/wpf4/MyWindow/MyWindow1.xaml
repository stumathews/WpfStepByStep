<!-- Defines a new Class of type Window called MyWindow1 as in:    
    namespace wpf4.MyWindow 
    {
        partial class MyWindow1 : Window
        {
    
        }
    }
    
-->
<Window 
    
    x:Class="wpf4.MyWindow.MyWindow1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Hello, WPF">
    
    <!-- Create a Button myButton as a member of the Window class, like this:
    
    partial class MyWindow1 : Window
    {
        Button button;
    
    }
    
    -->
    <Button 
        x:Name="myButton"
        Content="Hello world!"
        Width="200"
        Height="25"
        Click="Button_Click">        
    </Button>
    
    <!-- Note that the partial class for MyWindow1 (code behind)
    will have a call to InitializeComponent() which will actually
    initialized all the members of the myButton and class they way XAML is defining that button above
    -->
    
</Window>