<!--Defines the App class derived from type Application.
    Note: StartupUri Shows() MainWindow on Startup. 
    Note: We dont explicitly need to invoke Run() as this
    is handled by convienience by the runtime system.
    
    Note: Before we used a Main() method to instantiate and App.Run()
    -->
<Application x:Class="wpf5.App"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:local="clr-namespace:wpf5"             
            StartupUri="MainWindow.xaml"> <!-- Noteice how this automatically will open the Main Windows when the Application starts -->
<Application.Resources>
         <!-- We need to better understand how to refer to and use Application.Resources vs Window.Resources etc... !-->
</Application.Resources>
</Application>
